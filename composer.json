{
  "name": "bovsunovsky/sort-library",
  "description": "This is a sort-library study PHP projects.",
  "keywords": ["library"],
  "type": "library",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "bovsunovsky",
      "email": "bovsunovsky@rambler.ru",
      "role": "Maintainer"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "friendsofphp/php-cs-fixer": "^2.16"
  },
  "autoload": {
    "psr-4": {
      "BOA\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BOA\\Test\\": "tests/"
    }
  },
  "scripts": {
    "cs-check": "php-cs-fixer fix --allow-risky=yes --diff --ansi --dry-run",
    "cs-fix": "php-cs-fixer fix --allow-risky=yes --diff --ansi",
    "tests": "phpunit --colors=always"
  },
  "config": {
    "sort-packages": true
  }
}
